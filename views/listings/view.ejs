<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <div class="col-8 offset-4">
            <h3>Details of Listing</h3>
        </div>
        <div class="card col-6 offset-4 view-card">
            <img src="<%= listings.image %>" class="card-img-top show-img" alt="Listing_Image">
            <div class="card-body">
                <p class="card-text">
                    <b>
                        <%= listings.title %>
                    </b> <br>
                    <%= listings.description %> <br>
                        &#8377;<%= listings.price.toLocaleString("en-IN")%> <br>
                            <%= listings.location%> <br>
                                <%= listings.country%> <br>
                </p>
            </div>
        </div>

        <div class="btns mb-3">
            <a href="/listings/<%= listings._id %>/edit" class="btn btn-dark col-1 offset-4 btn-edit">Edit</a>

            <form method="POST" action="/listings/<%= listings._id %>?_method=DELETE">
                <button class="btn btn-dark offset-6">Delete</button>
            </form>
        </div>


    </div>